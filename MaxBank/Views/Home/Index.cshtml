@model List<Customer>;

<h1>Max Bank</h1>
<div>
    @foreach (var customer in Model)
    {
        <div style="border:2px solid black; width: 300px; display:inline-block;">
            <h5>Namn: @customer.Name</h5>
            <p>Kundnummer: @customer.Id</p>
            <p>Konton: </p>
            <div style="border:1px solid black">
                @foreach (var account in customer.Accounts)
                {
                    <h6>Kontonummer: @account.Id</h6>
                    <p>Saldo: @account.Balance</p>
                }
            </div>
        </div>
    }
</div>

